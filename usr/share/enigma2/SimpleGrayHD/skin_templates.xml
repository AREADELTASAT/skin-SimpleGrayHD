		<widget name="text" position="68,0" size="527,125" font="Regular;22"/>
		<widget name="ErrorPixmap" pixmap="SimpleGrayHD/skin_default/icons/input_error.png" position="5,0" size="53,53" alphatest="on"/>
		<widget name="QuestionPixmap" pixmap="SimpleGrayHD/skin_default/icons/input_question.png" position="5,0" size="53,53" alphatest="on"/>
		<widget name="InfoPixmap" pixmap="SimpleGrayHD/skin_default/icons/input_info.png" position="5,0" size="53,53" alphatest="on"/>

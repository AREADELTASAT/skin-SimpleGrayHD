		<widget name="list" position="5,153" size="0,0"/>
		<applet type="onLayoutFinish">
from enigma import eSize, ePoint
textsize = self["text"].getSize()
textsize = (int(textsize[0] * 1.1), int(textsize[1] * 1.1))
wsizex = textsize[0] + 73
wsizey = textsize[1] + 5
if 53 > wsizey:
	wsizey = 53
if self.type == self.TYPE_YESNO:
	listlen = len(self.list) * 25
	if listlen > 125:
		listlen = 125
	wsizey += listlen + 10
elif 200 > wsizex:
	wsizex = 200
self.instance.resize(eSize(*(wsizex, wsizey)))
if self.type == self.TYPE_MESSAGE:
	self["text"].instance.move(ePoint(31,0))
elif 50 > textsize[1]:
	self["text"].instance.move(ePoint(68,14))
self["text"].instance.resize(eSize(*textsize))
if self.type == self.TYPE_YESNO:
	self["list"].instance.move(ePoint(5, wsizey-listlen-10))
	self["list"].instance.resize(eSize(*(wsizex-10, listlen)))
self.instance.move(ePoint((1280-wsizex)/2, (720-wsizey+30)/2))
		</applet>
	</screen>

